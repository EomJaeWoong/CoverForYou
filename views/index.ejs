                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
            <div class="card bg-success">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
            <div class="card bg-danger">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
        </div>

        <div class="card-deck my-5">
            <div class="card bg-primary">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
            <div class="card bg-warning">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
            <div class="card bg-success">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
            <div class="card bg-danger">
                <div class="card-body text-center">
                    <div class="card-header">
                        <img src="/img/programming_default.png" class="img-thumbnail work_img" alt="work_img">
                    </div>
                    <div class="card-body">Content</div>
                    <div class="card-footer">Footer</div>
                </div>
            </div>
        </div>
    </div>
    <% } else if("user_info" == page_status) {%>
    <div class="row col-sm-10 mx-auto">
        <div class="card border col-sm-3">
            <div class="card-body text-center">
                <div class="card-header text-center">
                    <img src="/img/frog.jpg" class="img-thumbnail profile_img" alt="Profile">
                </div>
                <div class="card-body text-rignt"><%= name %></div>
                <div class="card-footer">Hello</div>
            </div>
        </div>

        <div class="container-fluid col-sm-8 border">
            <ul class="nav nav-tabs text-center" role="tablist">
                <li class="nav-item col-sm-6">
                    <a class="nav-link active" data-toggle="tab" href="#new">새소식</a>
                  </li>
                  <li class="nav-item col-sm-6">
                    <a class="nav-link" data-toggle="tab" href="#join_group">가입한 모임</a>
                  </li>
              </ul>
            
              <!-- Tab panes -->
              <div class="tab-content">
                <div id="new" class="container tab-pane active"><br>
                  <h3>HOME</h3>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                </div>
                <div id="join_group" class="container tab-pane fade"><br>
